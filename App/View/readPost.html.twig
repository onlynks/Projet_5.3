<body>

    <div class="container">
        
            <div class="jumbotron py-4">
              <p><b>Auteur: </b>{{ post.authorPost }}
              </br><b>Date: </b>{{ post.datePost.format('Y-m-d H:i:s') }}</p>
              <h1 class="display-3 d-flex justify-content-around" style="font-size:50px;">{{ post.titlePost }}</h1>
              <p class="lead">{{ post.descriptionPost }}</p>
              <hr class="my-4">
              
              <div class="d-flex justify-content-around">
                  <p class="lead">
                    <a class="btn btn-primary btn-lg" href=href="index.php?action=update&entity=post&id={{ post.id }}" role="button">
                    Mettre à jour le post</a>
                  </p>
                  <p class="lead">
                    <a class="btn btn-primary btn-lg" href="index.php?action=delete&entity=post&id={{ post.id }}" role="button">
                    Supprimer le post</a>
                  </p>
              </div>
            </div>
       
        <div class="bd-example">
            <div class="row">
                <div class="col-4">
                    <div id="list-example" class="list-group">
                        {% for com in coms %}
                        <a class="list-group-item list-group-item-action" href="#{{ com.id }}">{{ com.authorCom }} le {{ com.dateCom }}</a>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="col-8">
                    <div data-spy="scroll" data-target="#list-group"  style="overflow: scroll; height: 70vh;">
                        {% for com in coms %}
                        <h4 id="{{ com.id }}">{{ com.authorCom }}</h4>
                        <p>{{ com.contentCom }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
                
                <div class="col-md">
                    <form method="post" action="index.php?action=read&entity=post&id={{ post.id }}">
                        <div class="form-group">
                          <label for="exampleFormControlInput1">Pseudo:</label>
                          <input type="text" class="form-control" name="authorCom" id="auteur_com">
                        </div>
                        
                        <div class="form-group">
                          <label for="exampleFormControlTextarea1">Votre commentaire:</label>
                          <textarea class="form-control" name="contentCom" id="com" rows="10" cols="50"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Créer</button>
                        <input type="hidden" name="token" id="token" value="{{ token }}"/>
                    </form>
                </div>
            </div>
            
                
            
    </div>
    
   <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    
    <!-- Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    
    <!-- Latest compiled and minified Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    
    <!-- Initialize Bootstrap functionality -->
    <script>
        $('body').scrollspy({ target: '#navbar-example' })
        $('[data-spy="scroll"]').each(function () {
  var $spy = $(this).scrollspy('refresh')
})
    </script>
    
</body>
 